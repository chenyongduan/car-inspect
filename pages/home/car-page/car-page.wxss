/* pages/home/car-page/car-page.wxss */
@import '/pages/home/image-page/image-page.wxss';

.section-view {
  padding-top: 32rpx;
  width: 80%;
  border-bottom: #eee 2rpx solid;
	margin: 0 auto;
}

.section-view > text {
  font-size: 28rpx;
  color: #cdd0d7;
  display: block;
}

.section-view > input {
  margin: 16rpx 0;
  font-size: 28rpx;
  color: #696d76;
}

.check-text {
	margin: 16rpx 0;
  font-size: 28rpx;
  color: #696d76;
  display: block;
}

.check-text-empty {
	color: rgba(0, 0, 0, 0.4);
}

.image-section-view {
	padding-top: 32rpx;
  width: 80%;
	margin: 0 auto;
}

.image-title {
	font-size: 28rpx;
  color: #cdd0d7;
}

.image-content-view {
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
}

.image-content-view image {
	height: 300rpx;
	width: 45%;
	border-radius: 16rpx;
	margin-top: 32rpx;
	margin-right: 4.5%;
  border: #E7E8EA 4rpx solid;
}

.image-content-view view:last-child {
	border: #E7E8EA 4rpx solid;
	height: 300rpx;
	width: 45%;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 16rpx;
	font-size: 80rpx;
	color: #E7E8EA;
	margin-top: 32rpx;
	margin-right: 4.5%;
}

.save-button {
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
	width: 80%;
	background: #FFC250;
	color: #ffffff;
	border: none;
	margin-top: 96rpx;
	margin-bottom: 40rpx;
}

.delete-button {
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
	width: 80%;
	background: #FF4876;
	color: #ffffff;
	border: none;
	margin-bottom: 40rpx;
}