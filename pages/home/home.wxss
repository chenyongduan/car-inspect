/* pages/home/home.wxss */
@import "/template/car-item/car-item.wxss";
@import "/template/network-error-page/network-error-page.wxss";

.home-page {
  width: 100%;
  height: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
	background-color: #EBECEF;
}

.home-page-search-view {
  width: 90%;
  margin: 32rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.home-page-scroll-view {
  display: flex;
  flex: 1;
}

.home-page-scroll-padding {
  height: 32rpx;
}

.home-page-search-button {
  flex: 1;
  border: #E5E5E5 2rpx solid;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
	background-color: white;
}

.home-page-search-input {
  font-size: 32rpx;
  color: #babdc3;
  margin-left: 8rpx;
  width: 70%;
  padding-left: 16rpx;
}

.home-add-button {
	position: fixed;
	bottom: 32rpx;
	left: 50%;
	transform: translateX(-50%);
	height: 96rpx;
	width: 96rpx;
	border-radius: 96rpx;
	background-color: white;
	display: flex;
	justify-content: center;
	align-items: center; 
  box-shadow: 0rpx 0rpx 40rpx 5rpx rgba(0, 0, 0, 0.2);
}

.home-add-button text {
	font-size: 84rpx;
	color: #FF6D4A;
	line-height: 96rpx;
	margin-bottom: 8rpx;
}