
.car-item {
	display: flex;
	flex-direction: row;
	height: 210rpx;
	background-color: white;
	border-radius: 16rpx;
	margin: 0 40rpx 32rpx;
	overflow: hidden;
}

.car-item > image {
	position: relative;
	height: 210rpx;
	width: 192rpx;
}

.car-item > image view {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	height: 52rpx;
	background-color: rgba(0, 0, 0, 0.5);
	color: white;
	font-size: 24rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.content-view {
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin-left: 24rpx;
}

.content-view > text:first-child {
	font-size: 44rpx;
	color: #4A4A4A;
}

.content-view > text:last-child {
	font-size: 28rpx;
	color: #4A4A4A;
	margin-top: 20rpx;
}

.surplus-day {
	display: flex;
	flex: 1;
	justify-content: center;
	align-items: center;
}

.surplus-day > text {
	font-size: 64rpx;
	color: #4A4A4A;
}

.surplus-day > text text {
	font-size: 32rpx;
	color: #4A4A4A;
}